namespace teamstairwell
{
    class Entity
    {
        Vector2 pos;
        Vector2 vel;
        Vector2 acc;
        float hitrad;
        Sprite pic;

        public Entity()
        {
            pic = null;
            pos = Vector2.Zero;
            vel = Vector2.Zero;
            acc = Vector2.Zero;
            hitrad = 0;
        }

        public Entity(Vector2 position, Vector2 velocity, Vector2 acceleration, float radius, Sprite image)
        {
            pic = image;
            pos = position;
            vel = velocity;
            acc = acceleration;
            hitrad = radius;
        }

        public void update()
        {
            vel += acc;
            pos += vel;
        }
    }
}
